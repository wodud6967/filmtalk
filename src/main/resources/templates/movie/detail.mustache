<script>
    function commentItem(comment) {
        return `<div id="comment-${comment.id}" class="movie-detail__review">
                                <div class="review-details">
                                    <div>
                                        <span>${comment.username}</span>
                                        <span>${comment.createdAt}</span>
                                    </div>
                                    <div>
                                        <button onclick="deleteReply('${comment.id}')" type="button" class="btn">üóë</button>
                                    </div>
                                </div>
                                <div class="review-content">
                                    ${comment.comment}
                                </div>
                            </div>`;
    }

    async function saveReply() {
        // 1. Reply Í∞ùÏ≤¥ ÎßåÎì§Í∏∞ (idÎ°ú Ï∞æÏïÑÏÑú)
        let comment = {
            comment: $("#comment").val(),
            movieId: $("#movieId").val()
        };

        // 2. fetch ÏöîÏ≤≠ÌïòÍ∏∞.
        let response = await fetch(`/api/comment`, {
            method: "post",
            body: JSON.stringify(comment),
            headers: {
                "Content-Type": "application/json; charset=utf-8"
            }
        });
        let responseBody = await response.json(); // DTO !!
        if (response.ok) {
            // 3. CSR ÌïòÍ∏∞
            $("#comment-box").prepend(commentItem(responseBody.body));
            $("textarea").val("");
        } else {
            alert(responseBody.msg);
        }

    }

    async function deleteReply(id) {
        // 1. header + body
        let response = await fetch(`/api/comment/${id}`, {
            method: "delete"
        });
        // 2. body (parsing)
        let responseBody = await response.json(); // ÌååÏã±
        if (response.ok) {
            $(`#comment-${id}`).remove();
            //location.reload(); // F5
        } else {
            alert(responseBody.msg);
        }
    }

    $('#showModalBtn').on('click', function () {
        // ÎèôÏ†ÅÏúºÎ°ú Î™®Îã¨ÏùÑ ÏÉùÏÑ±
        $('body').append(`
          <div class="modal fade" id="videoModal" tabindex="-1" role="dialog" aria-labelledby="videoModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document" style="max-width: 1000px;">
                <div class="modal-body">
                  <iframe id="videoPlayer" width="900" height="600" src="{{model.vodUrl}}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>
            </div>
          </div>
        `);

        // Î™®Îã¨ÏùÑ ÌëúÏãú
        $('#videoModal').modal('show');

        // Î™®Îã¨Ïù¥ Îã´Ìûê Îïå ÏÇ≠Ï†ú
        $('#videoModal').on('hidden.bs.modal', function () {
            $(this).remove();
        });
    });
</script>

