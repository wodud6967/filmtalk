                                    ${comment.comment}
                                </div>
                            </div>`;
    }

    async function saveReply() {
        // 1. Reply ê°ì²´ ë§Œë“¤ê¸° (idë¡œ ì°¾ì•„ì„œ)
        let comment = {
            comment: $("#comment").val(),
            movieId: $("#movieId").val()
        };

        // 2. fetch ìš”ì²­í•˜ê¸°.
        let response = await fetch(`/api/comment`, {
            method: "post",
            body: JSON.stringify(comment),
            headers: {
                "Content-Type": "application/json; charset=utf-8"
            }
        });
        let responseBody = await response.json(); // DTO !!
        if (response.ok) {
            // 3. CSR í•˜ê¸°
            $("#comment-box").prepend(commentItem(responseBody.body));
            $("textarea").val("");
        } else {
            alert(responseBody.msg);
        }

    }

    async function deleteReply(id) {
        // 1. header + body
        let response = await fetch(`/api/comment/${id}`, {
            method: "delete"
        });
        // 2. body (parsing)
        let responseBody = await response.json(); // íŒŒì‹±
        if (response.ok) {
            $(`#comment-${id}`).remove();
            //location.reload(); // F5
        } else {
            alert(responseBody.msg);
        }
    }

